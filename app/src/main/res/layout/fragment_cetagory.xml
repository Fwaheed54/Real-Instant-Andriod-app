<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:layout_margin="10dp"
    tools:context=".PostFragment.CetagoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">


        <TextView
            android:id="@+id/CategorySpinText"
            android:layout_width="wrap_content"
            android:layout_height="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif-medium"
            android:text="Select Category "
            android:textColor="@color/holo_blue_dark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/Category"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/spinner_stype_category"
            android:layout_weight="0.5" />



        <EditText
            android:id="@+id/Discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CAPTION"
            android:text=""
            android:background="@drawable/style_edit_view_cap"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/divider"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            android:maxLength="255"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/SwitchText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.5"
            android:textColor="@color/holo_blue_dark"
            android:text="This For Global Post"
            android:textStyle="bold" />
        <Switch
            android:id="@+id/switch1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:theme="@style/SwitchTheme"
            android:layout_marginRight="10dp"
            android:shadowColor="@color/holo_blue_dark"
            android:layout_weight="0.5" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/previous_button"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:text="Previous" />

            <Button
                android:id="@+id/Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/previous_button"
                android:text="Next"
                android:textColor="@color/white"/>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>